extends ./layout

block body
    .container
        .jumbotron
            h1 Signup page
            p#user= JSON.stringify(errors)
            p#user= JSON.stringify(user)
            form(action="/signup", method="post").form-horizontal
                .form-group
                    label.col-sm-3 Username
                    .col-sm-9
                        input(placeholder="username", name="username", type="text", value=user ? user.username : '')#username.form-control
                .form-group
                    label.col-sm-3 E-mail
                    .col-sm-9
                        input(placeholder="email", name="email", type="email", value=user ? user.email : '')#email.form-control
                .form-group
                    label.col-sm-3 Password
                    .col-sm-9
                        input(placeholder="password", name="password", type="password")#password.form-control
                .form-group
                    label.col-sm-3 Nome
                    .col-sm-9
                        input(placeholder="nome",name="firstName", value=user ? user.firstName : '').form-control
                .form-group
                    label.col-sm-3 Cognome
                    .col-sm-9
                        input(placeholder="cognome",name="lastName", value=user ? user.lastName : '').form-control
                .form-group
                    label.col-sm-3 Data di nascita
                    .col-sm-9
                        input(placeholder="data di nascita",name="dateOfBirth",type="date", value=user ? user.dateOfBirth : '').form-control
                .form-group.btn-group
                    button(type="submit").btn.btn-lg.btn-success Signup!
                    button(type="reset").btn.btn-lg.btn-warning Reset